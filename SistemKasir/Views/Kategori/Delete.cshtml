@model SistemKasir.Models.Kategori

@{
    ViewData["Title"] = "Delete";
}

<div class="text-end">
    <h1>Hapus Kategori</h1>
</div>

<hr />
<h4>Apakah Anda yakin akan menghapus data ini?</h4>
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deskripsi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deskripsi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model.Status == true)
                {
                    <label>Aktif</label>
                }
                else
                {
                    <label>Tidak Aktif</label>
                }
            }
            @*@Html.DisplayFor(model => model.Status)*@
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdKategori" />
        <input type="submit" value="Hapus" class="btn btn-danger" /> |
        <a class="btn btn-outline-secondary" asp-action="Index">Kembali</a>
    </form>
</div>
